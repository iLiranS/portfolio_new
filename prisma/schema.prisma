// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Project{
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  date        DateTime        @default(now()) 
  tech        String[]
  title       String
  data        String
  description String
  link        String
  preview     String
  images      String[]
  github      String
}

model Post{
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  date        DateTime        @default(now()) 
  title       String
  data        String
  description String
  preview     String
}